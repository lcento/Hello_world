<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="170dp" android:layout_height="match_parent"
        android:orientation="vertical">
        <Button android:id="@+id/coloniesButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/button_name_colonies"
            android:layout_marginTop="15dp"/>
        <Button android:id="@+id/colonistsButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/button_name_colonists" />
        <Button android:id="@+id/basesButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/button_name_bases" />
        <Button android:id="@+id/militaryButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/button_name_military" />
        <Button android:id="@+id/ffonButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/button_name_ffon" />
        <Button android:id="@+id/ffoffButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/button_name_ffoff" />
        <Button android:id="@+id/doneButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/button_name_done"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="170dp" android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText android:id="@+id/editTextColonies" android:inputType="number" android:ems="12"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>
        <EditText android:id="@+id/editTextColonists" android:inputType="number" android:ems="12"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <EditText android:id="@+id/editTextBases" android:inputType="number" android:ems="12"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <EditText android:id="@+id/editTextMilitary" android:inputType="number" android:ems="12"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <EditText android:id="@+id/editForcefieldOn" android:inputType="number" android:ems="12"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <EditText android:id="@+id/editForcefieldOff" android:inputType="number" android:ems="12"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>